<p id="notice"><%= notice %></p>

<h1 class="text-center">Contas a receber</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Vencimento</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contas_a_receber.each do |conta_a_receber| %>
      <tr>
        <td><%= conta_a_receber.cliente_id %></td>
        <td><%= conta_a_receber.vencimento %></td>
        <td><%= conta_a_receber.valor %></td>
        <td><%= link_to 'Exibir', conta_a_receber %></td>
        <td><%= link_to 'Editar', edit_conta_a_receber_path(conta_a_receber) %></td>
        <td><%= link_to 'Excluir', conta_a_receber, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_to 'Nova conta a receber', new_conta_a_receber_path, class: 'button', method: :get %>
