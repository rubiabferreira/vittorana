<h1>Listing Contas A Receber</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Vencimento</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contas_a_receber.each do |conta_a_receber| %>
      <tr>
        <td><%= conta_a_receber.cliente_id %></td>
        <td><%= conta_a_receber.vencimento %></td>
        <td><%= conta_a_receber.valor %></td>
        <td><%= link_to 'Show', conta_a_receber %></td>
        <td><%= link_to 'Edit', edit_conta_a_receber_path(conta_a_receber) %></td>
        <td><%= link_to 'Destroy', conta_a_receber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

