<p id="notice"><%= notice %></p>

<h1 class="text-center">Eventos</h1>

<table>
  <thead>
    <tr>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td><%= evento.inicio %></td>
        <td><%= evento.fim %></td>
        <td><%= evento.cliente.nome %></td>
        <td><%= link_to 'Exibir', evento %></td>
        <td><%= link_to 'Editar', edit_evento_path(evento) %></td>
        <td><%= link_to 'Excluir', evento, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Novo Evento', new_evento_path, class: 'button', method: :get %>
