<p id="notice"><%= notice %></p>

<h1 class="text-center">Contas a pagar</h1>

<table>
  <thead>
    <tr>
      <th>Fornecedor</th>
      <th>Vencimento</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contas_a_pagar.each do |conta_a_pagar| %>
      <tr>
        <td><%= conta_a_pagar.fornecedor_id %></td>
        <td><%= conta_a_pagar.vencimento %></td>
        <td><%= conta_a_pagar.valor %></td>
        <td><%= link_to 'Exibir', conta_a_pagar %></td>
        <td><%= link_to 'Editar', edit_conta_a_pagar_path(conta_a_pagar) %></td>
        <td><%= link_to 'Excluir', conta_a_pagar, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nova conta a pagar', new_conta_a_pagar_path, class: 'button', method: :get %>
