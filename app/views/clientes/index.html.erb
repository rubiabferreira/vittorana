<p id="notice"><%= notice %></p>

<h1 class="text-center">Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone residencial</th>
      <th>Telefone celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.tresidencial %></td>
        <td><%= cliente.tcelular %></td>
        <td><%= link_to 'Exibir', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Excluir', cliente, method: :delete, data: { confirm: 'Tem certeza? Esta ação irá excluir todos os eventos deste cliente.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Novo cliente', new_cliente_path, class: 'button', method: :get %>
